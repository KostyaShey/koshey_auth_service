# Database Configuration
DATABASE_URL=postgresql://auth_user:auth_password@localhost:5433/auth_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production-use-64-chars-minimum
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-use-64-chars-minimum

# JWT Keys for RS256 (optional - if not provided, HS256 will be used)
# Generate with: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -pubout > public.pem
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=

# Application Configuration
DEBUG=false
TESTING=false
PORT=5000

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourapp.com

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourapp.com

# Rate Limiting
RATELIMIT_DEFAULT=100 per hour

# Logging
LOG_LEVEL=INFO

# Optional: Monitoring and Analytics
SENTRY_DSN=
ANALYTICS_ENABLED=false

# OAuth2 Configuration
OAUTH2_AUTHORIZATION_CODE_EXPIRES=600
OAUTH2_ACCESS_TOKEN_EXPIRES=3600
OAUTH2_REFRESH_TOKEN_EXPIRES=604800
OAUTH2_DEFAULT_SCOPES=read
OAUTH2_SUPPORTED_GRANT_TYPES=authorization_code,refresh_token,client_credentials,password
TOKEN_INTROSPECTION_ENABLED=true
TOKEN_REVOCATION_ENABLED=true

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=604800
JWT_ALGORITHM=RS256
JWT_PRIVATE_KEY_PATH=keys/jwt_private.pem
JWT_PUBLIC_KEY_PATH=keys/jwt_public.pem

# Security Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=1800

# Session Configuration
SESSION_TIMEOUT=3600
REMEMBER_ME_DURATION=604800

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true

# Rate Limiting Storage
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true